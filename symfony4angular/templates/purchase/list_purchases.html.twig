{% extends 'base.html.twig' %}

{% block title %}Showing the Shopping list{% endblock %}

{% block body %}
    <h1>Shopping list</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Status</th>
                <th>Date</th>
                <th>Adress</th>
                <th>City</th>
                <th>Postcode</th>
                <th>Country</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            {% for purchase in purchases %}
                <tr>
                    <td>{{ purchase.id }}</td>
                    <td>{{ purchase.customer }}</td>
                    <td>{{ purchase.status }}</td>
                    <td>{{ purchase.date ? purchase.date|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ purchase.address1 }}</td>
                    <td>{{ purchase.city }}</td>
                    <td>{{ purchase.postcode }}</td>
                    <td>{{ purchase.country }}</td>
                    <td>{{ purchase.amount }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
